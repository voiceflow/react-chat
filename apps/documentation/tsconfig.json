{
  "extends": "@voiceflow/tsconfig",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "incremental": true,
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@/*": ["/src/*"]
    }
  },
  "exclude": ["node_modules", "build"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/_app.tsx"]
}
