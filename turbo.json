{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build:cmd": {
      "outputs": ["build/**", "dist/**"],
      "inputs": [
        "../../scripts/build_pkg.sh",
        "src/**",
        ":!src/**/*.test.ts",
        "next.config.mjs",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsconfig.build.*.json"
      ],
      "dependsOn": ["^build:cmd"]
    },
    "test:types": {
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsconfig.build.json", "tsconfig.build.*.json"],
      "dependsOn": ["^build:cmd"]
    },
    "test:dependencies": {
      "inputs": ["src/**", "package.json", ".dependency-cruiser.mjs", ".dependency-cruiser-known-violations.json"]
    },
    "test:unit": {
      "outputs": ["sonar/coverage/**", "unit.report.xml"],
      "inputs": ["src/**", "package.json", "vite.config.mts", "vitest.config.mts"]
    },
    "dev": {
      "dependsOn": ["^build:cmd"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
